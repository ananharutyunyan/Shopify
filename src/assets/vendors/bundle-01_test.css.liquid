.step-1-box .step-1-step{
    margin-top: 29px;
    margin-left: 59px;
}
.step-1-step {
    font-size: 16px;
    line-height: 25px;
    width: 28px;
    height: 26px;
    background-position: -160px -21px;
}

p.bundle-headline {
    text-align: center;
    font-weight: 800;
    height: 1em;
  
}

.step-1-box {
    width: 170px;
    height: 160px;
    border: 1px dotted #cc3366;
    margin: 0;
    vertical-align: top;
    float: left;
    position: relative;
}


.step-2-box {
    width: 170px;
    height: 160px;
    border: 1px dotted #cc3366;
    margin: 0;
    vertical-align: top;
    float: left;
    position: relative;
}

.step-1-box:before {
    content: "1";
    position: absolute;
    top: 45px;
    left: 40px;
    font-size: 60px;
    border: 22px solid #cc3366;
    border-radius: 45px;
    background-color: #cc3366;
    color: #fff;
    z-index: -1;
}
.step-2-box:before {
    content: "2";
    position: absolute;
    top: 45px;
    left: 40px;
    font-size: 60px;
    border: 22px solid #cc3366;
    border-radius: 45px;
    background-color: #cc3366;
    color: #fff;
    z-index: -1;
}
a.offer-link {
	color: #00afd8;
	font-weight: 700;
}
a.offer-link:hover {
	text-decoration: underline;
}


#recommendations .recommendations-group .columns {
	border: 2px solid transparent;
    padding: 5px;
	
	-webkit-transition: all 500ms ease 0s;
    -moz-transition: all 500ms ease 0s;
    -ms-transition: all 500ms ease 0s;
    -o-transition: all 500ms ease 0s;
    transition: all 500ms ease 0s;
}
#recommendations .recommendations-group:hover .columns,
#recommendations .recommendations-group.combo-selected .columns {
	border: 2px solid #cc3366;
    padding: 5px;
}
#recommendations .recommendations-group.combo-selected .columns {
	background:url("{{ '../images/selected-combo-tick.png' | asset_url }}") bottom right no-repeat;
}

  
