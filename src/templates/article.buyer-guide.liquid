<!-- templates/article.buyer-guide.liquid -->
<div id="articles">

  {% paginate article.comments by 100 %}
    <div class="sixteen columns clearfix collection_nav">
      {% include 'breadcrumbs-buying-guides' %}
    </div>

    {% include 'sidebar-general', mobile: false, hide_sections: 'vibrators' %}

    <div class="twelve columns omega blog_content columns__large-right-gutter">
      <center>
        <h1 class="newhome"><b><a href="{{ article.url }}" title="{{ article.title | escape }}">{{ article.title }}</a></b></h1>
      </center>

      {{ article.content }}
      <hr>
      <h5>Was This Article Useful? Please Like / Share It!</h5>
      {% include "social-buttons" with "article" %}

      <br class="clear" />

      <div class="clear" id="comments"></div>

      {% include 'pagination' with 'sidebar' %}

      <div class="clear" id="new-comment"></div>

      <div id="more-articles">
        <h3 class="newhome">MORE BUYING GUIDES <a href="/blogs/sex-toy-guides">View All Guides</a></h3>
      </div>

      {% if article.tags contains 'Vibrator Buying Guides' %}
        <div class="twelve columns article">
          <ul class="mobile-fblock-grid-2 tablet-fblock-grid-3">
            {% for article in blog.articles limit: 6 %}
              <li>
                <a href="{{ article.url }}" title="{{ article.title | escape }}">
                  <img src="{{ article.image.src | img_url: 'large' }}">
                </a>
              </li>
            {% endfor %}
          </div>
        </div>
      {% endif %}
    </div>

    <script type="text/javascript">
      // <![CDATA[
        $(function() {
          if(window.location.pathname.indexOf('/comments') != -1) {
            $('html,body').animate({scrollTop: $("#new-comment").offset().top-110},'slow');
          }
        });
      // ]]>
    </script>
  {% endpaginate %}

  {% include 'sidebar-general', mobile: true, hide_sections: 'vibrators' %}
</div>


{% include 'limespot-recently-viewed' %}

{% include 'limespot-trending' %}